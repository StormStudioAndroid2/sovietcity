<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    card:cardBackgroundColor="@android:color/transparent">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_record"
            android:textSize="@dimen/name_font"
            android:drawableLeft="@drawable/ic_adult_group"
            android:layout_margin="@dimen/activity_horizontal_margin"/>
        <TextView
            android:textSize="@dimen/name_font"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_emotion"
            android:id="@+id/emo_record"
            android:layout_margin="@dimen/activity_horizontal_margin"/>

        <TextView
            android:textSize="@dimen/name_font"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_money_red"
            android:id="@+id/money_record"
            android:layout_margin="@dimen/activity_horizontal_margin"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>