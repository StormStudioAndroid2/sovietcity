<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_menu_margin"
    android:background="@drawable/fon1"
    android:gravity="center"
    android:orientation="vertical"

    android:padding="@dimen/menu_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:text="@string/menu_pop"
        android:textSize="@dimen/name_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="4"
                card_view:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/group_name1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_pop_group"
                        android:padding="@dimen/text_padding"
                        android:singleLine="true"
                        android:text="@string/pop_name"
                        android:textSize="@dimen/text_font" />

                    <TextView
                        android:id="@+id/group_quantity1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_man"
                        android:padding="@dimen/text_padding"
                        android:singleLine="true"
                        android:text="@string/pop_quantity"
                        android:textSize="@dimen/text_font" />

                    <TextView
                        android:id="@+id/group_emo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_emotion"

                        android:padding="@dimen/text_padding"
                        android:singleLine="true"
                        android:text="@string/group_emo"
                        android:textSize="@dimen/text_font" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/child_card"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"

                android:scrollbars="horizontal"
                card_view:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/group_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_pop_group"
                        android:padding="@dimen/text_padding"

                        android:scrollbars="horizontal"
                        android:singleLine="true"
                        android:text="@string/child_group_name"
                        android:textSize="@dimen/text_font" />

                    <TextView
                        android:id="@+id/group_quantity2"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_man"
                        android:padding="@dimen/text_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/text_font" />

                    <TextView
                        android:id="@+id/group_emo2"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_emotion"
                        android:padding="@dimen/text_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/text_font" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/adult_card"
                android:layout_width="wrap_content"


                android:layout_height="wrap_content"
                android:layout_weight="5"
                card_view:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/group_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableLeft="@drawable/ic_pop_group"
                        android:padding="@dimen/text_padding"
                        android:scrollbars="horizontal"
                        android:singleLine="true"
                        android:text="@string/adult_group_name"
                        android:textSize="@dimen/text_font" />

                    <TextView
                        android:id="@+id/group_quantity3"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_man"
                        android:padding="@dimen/text_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/text_font" />

                    <TextView
                        android:id="@+id/group_emo3"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_emotion"
                        android:padding="@dimen/text_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/text_font" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pensioneer_card"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="5"
                android:background="@drawable/fon1"
                card_view:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    card_view:cardBackgroundColor="@android:color/transparent">

                    <TextView
                        android:id="@+id/group_name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableLeft="@drawable/ic_pop_group"
                        android:padding="@dimen/text_padding"
                        android:scrollbars="horizontal"
                        android:singleLine="true"
                        android:text="@string/pensioneer_group_name"
                        android:textSize="@dimen/text_font" />

                    <TextView
                        android:id="@+id/group_quantity4"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_man"
                        android:padding="@dimen/text_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/text_font" />

                    <TextView
                        android:id="@+id/group_emo4"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_emotion"
                        android:padding="@dimen/text_padding"
                        android:singleLine="true"
                        android:textSize="@dimen/text_font" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:background="@drawable/btn"
            android:padding="@dimen/btn_padding"

            android:id="@+id/more_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/more_data"
            android:textSize="@dimen/btn_text_size" />
    </LinearLayout>
</LinearLayout>