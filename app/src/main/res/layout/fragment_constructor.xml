<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_menu_margin"
    android:background="@drawable/fon1"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/menu_padding"
    tools:context=".View.ConstructorFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/name_font" />

    <SeekBar
        android:id="@+id/seek_block"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="9" />
    <TextView
        android:id="@+id/text_stage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/name_font" />

    <SeekBar
        android:id="@+id/seek_stage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="9" />



    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn"
        android:padding="@dimen/btn_padding"
        android:text="OK"
        android:textSize="@dimen/btn_text_size" />
</LinearLayout>
