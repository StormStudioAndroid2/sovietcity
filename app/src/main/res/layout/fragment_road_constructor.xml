<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".View.RoadConstructorFragment"
    android:orientation="vertical"
    android:padding="@dimen/menu_padding"
    android:layout_margin="@dimen/activity_menu_margin"
    android:background="@drawable/fon1"
    android:paddingTop="@dimen/padding_top"
    android:layout_marginTop="@dimen/margin_top"

    android:gravity="center">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text_block_road"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/name_font" />

    <SeekBar
        android:id="@+id/seek_block_road"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="18" />

    <Button
        android:background="@drawable/btn"
        android:padding="@dimen/btn_padding"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="@dimen/btn_text_size"
        android:id="@+id/road_button"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
