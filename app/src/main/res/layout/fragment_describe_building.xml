<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_margin="@dimen/activity_menu_margin"
    android:layout_marginTop="@dimen/margin_top"
    android:background="@drawable/fon1"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/menu_padding"
    android:paddingTop="@dimen/padding_top"
    tools:context="com.sovietcity.View.DescribeBuildingFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/build_describe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/name_font" />

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_recycler_margin"

        card_view:cardBackgroundColor="@android:color/transparent">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/build_icon_describe"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:padding="@dimen/nav_header_vertical_spacing"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/build_describe_history"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_font" />
            </LinearLayout>


    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/describe_back"
        android:text="@string/back_to_build_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/btn_text_size"
        android:background="@drawable/btn"
        />
</LinearLayout>
