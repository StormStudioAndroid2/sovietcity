<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="colorPrimary">#FF0000</item>
        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:activatedBackgroundIndicator">@drawable/drawer_selector</item>
        <item name="colorAccent">@color/dark_red</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#FF0000</item>
        <item name="colorAccent">@color/dark_red</item>

        <item name="colorPrimaryDark">@android:color/holo_red_dark</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/dark_red</item>

        <item name="colorControlNormal">@color/primary_text_material_light</item>
        <item name="colorControlActivated">@color/dark_red</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
        <item name="actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorAccent">@color/dark_red</item>

        <item name="metaButtonBarStyle">?attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/black_overlay</item>
        <item name="colorAccent">@color/dark_red</item>

    </style>
    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="android:drawable">@drawable/icon_money</item>


    </style>

</resources>
